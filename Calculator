        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    </head>

    <body>
        <div class="d-flex align-items-center justify-content-center vh-100" style="flex-direction: column;">
            <form action="" method="POST" name="simpleCalculator-form">
                <div class="mb-3">
                    <label for="input1stNumber" class="form-label">1st Number</label>
                    <input id="input1stNumber" class="form-control" type="number" name="firstNumber" placeholder="Ex. 19" required/>
                </div>
                <div class="mb-3">
                    <label for="input2ndNumber" class="form-label">2nd Number</label>
                    <input id="input2ndNumber" class="form-control" type="number" name="secondNumber" placeholder="Ex. 30" required/>
                </div>
                <div style="text-align: center;">
                    <input id="btnAdd" value="+" type="submit" class="btn btn-primary"/>
                    <input id="btnSubtract" value="-" type="submit" class="btn btn-primary"/>
                    <input id="btnMultiply" value="x" type="submit" class="btn btn-primary"/>
                    <input id="btnDivision" value="/" type="submit" class="btn btn-primary"/>
                </div>

                <br><br>
                <div class="mb-3">
                    <label for="result" class="form-label">Result:</label>
                    <input id="result" class="form-control" type="number" name="result" value="?php echo $result; ?>"/>
                </div>

            </form>
        </div>
    </body>

    <?php
        function addNumbers() {
            if(isset($_POST['submit'])) {
                $input1stNumber = $_POST['input1stNumber'];
                $input2ndNumber = $_POST['input2ndNumber'];
                $result =  $input1stNumber + $input2ndNumber;
            }
        }
        function subtractNumbers() {
            if(isset($_POST['submit'])) {
                $input1stNumber = $_POST['input1stNumber'];
                $input2ndNumber = $_POST['input2ndNumber'];
                $result =  $input1stNumber - $input2ndNumber;
            }
        }
        function divisionNumbers() {
            if(isset($_POST['submit'])) {
                $input1stNumber = $_POST['input1stNumber'];
                $input2ndNumber = $_POST['input2ndNumber'];
                $result = $input1stNumber / $input2ndNumber;
            }
        }
        function multiplicationNumbers() {
            if(isset($_POST['submit'])) {
                $input1stNumber = $_POST['input1stNumber'];
                $input2ndNumber = $_POST['input2ndNumber'];
                $result = $input1stNumber + $input2ndNumber;
            }
        }

    if ($_POST['submit'] == "/" && ($_POST['input1stNumber'] == 0 || $_POST['input1stNumber'] == 0)) {
        $result = "Cannot divide by 0";
    }
    else if ($_POST['submit'] == "/") {
        divisionNumbers();
    }
    else if ($_POST['submit'] == "*") {
        multiplicationNumbers();
    }
    else if ($_POST['submit'] == "+") {
        addNumbers();
    }
    else if ($_POST['submit'] == "-") {
        subtractNumbers();
    }
    
    ?>

    </html>
